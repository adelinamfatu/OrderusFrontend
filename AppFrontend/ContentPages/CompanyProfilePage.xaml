<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFrontend.ContentPages.CompanyProfilePage"
             xmlns:local="clr-namespace:AppFrontend.CustomControls"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:conv="clr-namespace:AppFrontend.Converters"
             Title="Orderus">

    <ContentPage.Resources>
        <conv:ImageUriConverter x:Key="ImageUriConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout HorizontalOptions="Center">
                <Frame CornerRadius="100" 
                    HeightRequest="100"
                    WidthRequest="100"
                    Padding="0"
                    IsClippedToBounds="True">
                    <Image Source="{Binding Logo, Converter={StaticResource ImageUriConverter}}" />
                </Frame>
                <Button ImageSource="add.png" 
                        WidthRequest="30"
                        HeightRequest="30" 
                        Clicked="ChoosePhotoFromGallery"/>
            </AbsoluteLayout>
            <StackLayout HorizontalOptions="Center" WidthRequest="350">
                <Frame x:Name="name" BackgroundColor="#94b1e3" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                    <local:CustomEntry
                        Text="{Binding Name}"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="20"
                        Margin="10,0,10,0"
                        PlaceholderColor="#ebf3fb"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        ReturnType="Next" />
                </Frame>
                <Frame x:Name="city" BackgroundColor="#94b1e3" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                    <local:CustomEntry
                        Text="{Binding City}"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="20"
                        Margin="10,0,10,0"
                        PlaceholderColor="#ebf3fb"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        ReturnType="Next" />
                </Frame>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                    <Frame x:Name="street" BackgroundColor="#94b1e3" Grid.Column="0" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                        <local:CustomEntry
                        Text="{Binding Street}"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="20"
                        Margin="10,0,10,0"
                        PlaceholderColor="#ebf3fb"
                        TextColor="White"
                        ReturnType="Next" />
                    </Frame>
                    <Frame x:Name="streetNumber" BackgroundColor="#94b1e3" Grid.Column="1" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                        <local:CustomEntry
                            Text="{Binding StreetNumber}"
                            ClearButtonVisibility="WhileEditing"
                            FontSize="20"
                            Margin="10,0,10,0"
                            PlaceholderColor="#ebf3fb"
                            TextColor="White"
                            ReturnType="Next" />
                    </Frame>
                </Grid>
                <Frame x:Name="building"  BackgroundColor="#94b1e3" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                    <local:CustomEntry
                        Text="{Binding Building}"
                        Placeholder="Cladirea"
                        PlaceholderColor="#667284"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="20"
                        Margin="10,0,10,0"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        ReturnType="Next" />
                </Frame>
                <Frame x:Name="staircase" BackgroundColor="#94b1e3" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                    <local:CustomEntry
                        Placeholder="Scara"
                        PlaceholderColor="#667284"
                        Text="{Binding Staircase}"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="20"
                        Margin="10,0,10,0"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        ReturnType="Next" />
                </Frame>
                <Frame x:Name="apartmentNumber" BackgroundColor="#94b1e3" CornerRadius="20" HeightRequest="50" Margin="0,10,0,0" Padding="0" HasShadow="True" BorderColor="#667284">
                    <local:CustomEntry
                        Placeholder="Numar apartament"
                        PlaceholderColor="#667284"
                        Text="{Binding ApartmentNumber}"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="20"
                        Margin="10,0,10,0"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        ReturnType="Next" />
                </Frame>
                <Grid x:Name="functionEntryGrid" IsVisible="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Entry x:Name="function" Placeholder="Introduceti functiile" Grid.Column="0" />
                    <Button 
                        ImageSource="ok.png" 
                        Grid.Column="1" 
                        BackgroundColor="#93b0e0" 
                        WidthRequest="50" 
                        HeightRequest="40" 
                        Clicked="AddFunctionToList"
                        />
                </Grid>
                <xct:UniformGrid x:Name="functionsUniformGrid" VerticalOptions="FillAndExpand" BindableLayout.ItemsSource="{Binding Functions, Mode=OneWay}" IsVisible="False">
                    <BindableLayout.EmptyView>
                        <Label Text="Nicio functie introdusa"/>
                    </BindableLayout.EmptyView>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="2" BackgroundColor="#94b1e3" CornerRadius="10" Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label 
                                        Text="{Binding}"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        Grid.Column="0"
                                        InputTransparent="True"  
                                    />
                                    <Button 
                                        ImageSource="cancel.png"
                                        WidthRequest="20"
                                        HeightRequest="20"
                                        Grid.Column="1"
                                        BackgroundColor="Red"
                                    />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </xct:UniformGrid>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" RadioButtonGroup.GroupName="companyDetailsChangeDisplay">
                    <RadioButton IsChecked="True" x:Name="page1Button" CheckedChanged="ChangePage" />
                    <RadioButton x:Name="page2Button" CheckedChanged="ChangePage"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>