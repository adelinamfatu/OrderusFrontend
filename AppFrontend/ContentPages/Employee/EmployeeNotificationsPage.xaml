<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFrontend.ContentPages.Employee.EmployeeNotificationsPage">
    
    <ContentPage.Content>
        <ListView ItemsSource="{Binding CancelledOrders}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label
                            VerticalTextAlignment="Center"
                            FontSize="18"
                            Text="{Binding StartTime, StringFormat='Cererea pentru comanda din data de {0:dd.MM.yyyy} de la ora {0:HH:mm} a fost respinsa'}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>