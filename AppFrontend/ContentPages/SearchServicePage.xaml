<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFrontend.ContentPages.SearchServicePage"
             Title="Orderus">

    <FlexLayout x:Name="servicesLayout" BindableLayout.ItemsSource="{Binding Services}" 
              HorizontalOptions="FillAndExpand"
              VerticalOptions="StartAndExpand">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Button BackgroundColor="#26364d"
                                HorizontalOptions="Center" VerticalOptions="Center"
                                CornerRadius="10" WidthRequest="100" HeightRequest="100"
                                Text="{Binding Name}"
                                TextColor="White"
                                Margin="5"/>
                </ViewCell>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </FlexLayout>
</ContentPage>