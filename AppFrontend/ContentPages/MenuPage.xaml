<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFrontend.ContentPages.MenuPage"
            xmlns:local="clr-namespace:AppFrontend.ContentPages"
            Title="Orderus"
            BackgroundColor="#ecf3fb">

    <NavigationPage Title="Cauta" IconImageSource="search.png" BarBackgroundColor="#6ba1f9">
        <x:Arguments Title="Orderus">
            <local:SearchCategoryPage />
        </x:Arguments>
        <NavigationPage.ToolbarItems>
            <ToolbarItem IconImageSource="icon_white.png" Priority="0" />
        </NavigationPage.ToolbarItems>
    </NavigationPage>
    <local:BasketPage Title="Cos" 
               IconImageSource="basket.png"/>
    <local:HistoryPage Title="Istoric" 
               IconImageSource="activity_history.png"/>
    <NavigationPage Title="Cont" IconImageSource="user.png" BarBackgroundColor="#6ba1f9">
        <x:Arguments Title="Orderus">
            <local:ClientProfilePage />
        </x:Arguments>
        <NavigationPage.ToolbarItems>
            <ToolbarItem IconImageSource="icon_white.png" Priority="0" />
            <ToolbarItem IconImageSource="logout.png" Priority="1" Clicked="LogoutAccount"/>
        </NavigationPage.ToolbarItems>
    </NavigationPage>
</TabbedPage>