<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFrontend.ContentPages.CreateAccountPage">
    
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Email" Placeholder="email" />
            <Entry x:Name="Password" Placeholder="parola" IsPassword="True"/>
            <Entry x:Name="Surname" Placeholder="nume" />
            <Entry x:Name="Name" Placeholder="prenume" />
            <Entry x:Name="PhoneNumber" Placeholder="numar de telefon" />
            <Entry x:Name="City" Placeholder="oras" />
            <Entry x:Name="Street" Placeholder="strada" />
            <Entry x:Name="StreetNumber" Placeholder="numar" />
            <Button Text="Creare cont" Clicked="VerifyAccountDetails"/>
            <Button Text="Conectare" Clicked="OpenLoginPage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>