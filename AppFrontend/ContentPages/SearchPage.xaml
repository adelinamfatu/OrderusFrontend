<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFrontend.ContentPages.SearchPage">
    <ListView x:Name="categoriesListView" ItemsSource="{Binding Categories}" HorizontalOptions="Center" 
              RowHeight="100" HasUnevenRows="True" SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical" Margin="10,0">
                        <Button BackgroundColor="#26364d"
                                    HorizontalOptions="Center" VerticalOptions="Center"
                                    CornerRadius="60" WidthRequest="75" HeightRequest="75"/>
                        <Label Text="{Binding Name}" HorizontalOptions="Center"
                                    TextColor="#26364d" FontSize="20"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>